{% extends 'base.html.twig' %}

{% block title %}Hello PackageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <script src="{{ asset('js/package_type.js')}}"></script>
<h1>Packages List</h1>
    {% for type in pckTypes %}
        <div class="card mb-4 box-shadow">
            <div>Name: {{ type.name }}</div>
            <div>Price: {{ type.price }} $</div>
            <div>Package Limit: {{ type.packageLimit }}</div>
            <div>Purchase limit per month: {{ type.buyLimit }} (already bought: 0)</div>
            <div>
                <button class="btn btn-lg btn-primary" onClick="buyPackage({{ type.id }})">Buy Package</button>
            </div>
        </div>

    {% endfor %}
{% endblock %}
