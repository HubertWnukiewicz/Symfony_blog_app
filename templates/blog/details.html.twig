{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}
    <style>
        .wrapper {
            margin: 1em auto;
            width: 100%;
        }
        div {
            border: 1px solid #000000;
            margin: 8px;
        }
    </style>

    <div class="wrapper">
        <h1>{{ blog.title }}</h1>
        <div>Publication Date: {{ blog.insertDate |date('d-m-Y') }}</div>
        <div> Blog text:</div>
        <div id ="blog_content">
            {{ blog.text }}
        </div>
    </div>
{% endblock %}